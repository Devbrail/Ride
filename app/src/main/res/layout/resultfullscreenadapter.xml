<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
     >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/drivername"
                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="john\nDoe" />

                <com.example.myride.customLayoutclass.RoundedImageView
                    android:id="@+id/profile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/african" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Driver rating"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <androidx.appcompat.widget.AppCompatRatingBar
                    android:id="@+id/ratin"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="2"
                    android:stepSize="1.0" />

            </LinearLayout>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:id="@+id/ee"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/stating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:text="Nairobi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="Departure" />
            </LinearLayout>

            <ImageView
                android:layout_width="273dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="0dp"
                android:layout_toLeftOf="@+id/oo"
                android:layout_toRightOf="@+id/ee"
                android:src="@drawable/qq" />

            <LinearLayout
                android:id="@+id/oo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:text="Kitale" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="Arrival" />
            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="3dp">

            <LinearLayout
                android:id="@+id/dat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:textColor="#000"
                    android:id="@+id/depru"
                    android:text="Departure time:" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/departuretime"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="05dp"
                    android:textColor="#000"
                    android:text="Arrival time      :" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/arrivaltime"
                    android:layout_alignParentLeft="true"
                    android:textColor="#000"
                    android:id="@+id/totu"
                    android:text="Total time        :" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/dat"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/departuretime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:textColor="#000"
                    android:text=" " />

                <TextView
                    android:id="@+id/arrivaltime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/departuretime"
                    android:layout_alignParentLeft="true"
                    android:textColor="#000"
                    android:layout_marginTop="05dp"
                    android:text="   " />

                <TextView
                    android:id="@+id/totaltime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/arrivaltime"
                    android:layout_alignParentLeft="true"
                    android:textColor="#000"
                    android:text=" " />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/colorPrimary"
                android:gravity="center_vertical"

                android:id="@+id/price"
                android:text="$100"
                android:textColor="#FFFFFF" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:elevation="3dp">

            <TextView
                android:id="@+id/cd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="#000"
                android:text="Car details" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cd"
                android:layout_centerHorizontal="true"


                android:orientation="vertical">

                <ImageView
                    android:id="@+id/car"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/yu" />

                <TextView
                    android:id="@+id/carname"
                    android:layout_width="match_parent"
                    android:textColor="#000"
                    android:layout_height="wrap_content"
                    android:text="mercedes-benz-cls-class"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/regno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#A9F7BA1E"

                    android:text="Registration number : KBA 2155"
                    android:textAlignment="center"
                    android:textColor="#000" />

                <RatingBar
                    android:id="@+id/noofseat"

                     android:layout_width="wrap_content"
                    android:layout_height="40dp"

                    android:layout_marginTop="2dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="30dp"
                     android:numStars="4"
                    android:isIndicator="true"
                    android:stepSize="1"

                    android:progressDrawable="@drawable/custom_ratingbar_selector"
                    android:rating="2"
                 />


            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>
</ScrollView>